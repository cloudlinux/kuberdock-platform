{
    "extends": "eslint:recommended",
    "rules": {
        "no-console": [1],
        "no-shadow-restricted-names": [1],
        "no-unused-vars": [1, {"args": "none"}],
        "no-use-before-define": [1, {"functions": false}],
        "eqeqeq": ["error", "smart"],

        "array-bracket-spacing": [1],
        "block-spacing": [1],
        "brace-style": [1, "1tbs", {"allowSingleLine": true}],
        "camelcase": [1, {"properties": "never"}],
        "comma-dangle": [0, "only-multiline"],
        "comma-spacing": [1, {"before": false, "after": true}],
        "comma-style": [1],
        "computed-property-spacing": [1],
        "eol-last": [1],
        "indent": [0, 4],
        "keyword-spacing": [1],
        "linebreak-style": [2, "unix"],
        "max-depth": [1, 8],
        "max-len": [1, {"code": 100, "ignoreUrls": true}],
        "max-statements-per-line": [1, {"max": 2}],
        "new-cap": [1, {"capIsNewExceptions": ["Deferred"]}],
        "new-parens": [1],
        "no-array-constructor": [1],
        "no-lonely-if": [1],
        "no-multiple-empty-lines": [1],
        "no-negated-condition": [0],
        "no-nested-ternary": [1],
        "no-new-object": [1],
        "no-spaced-func": [1],
        "no-trailing-spaces": [1],
        "no-underscore-dangle": [1, {"allowAfterThis": true, "allow": ["__super__"]}],
        "no-unneeded-ternary": [1],
        "no-whitespace-before-property": [1],
        "object-curly-spacing": [0],
        "operator-assignment": [0],
        "operator-linebreak": [1, "after", {"overrides": {"?": "before", ":": "before"}}],
        "quote-props": [0, "consistent-as-needed"],
        "quotes": [0, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
        "semi": [1, "always"],
        "semi-spacing": [1, {"before": false, "after": true}],
        "space-before-blocks": [0, "never"],
        "space-before-function-paren": [0, "never"],
        "space-in-parens": [0],
        "space-infix-ops": [1, {"int32Hint": true}],
        "space-unary-ops": [1],

        "block-scoped-var": [1],
        "dot-location": [1, "property"],
        "dot-notation": [1],
        "no-alert": [1],
        "no-lone-blocks": [1],
        "no-magic-numbers": [0, {
            "ignoreArrayIndexes": true,
            "ignore": [-2, -1, 0, 1, 2, 3,
                       400, 401, 402, 403, 404,
                       500, 501, 502, 503, 504]}],
        "no-multi-spaces": [1],
        "no-octal-escape": [1],
        "no-proto": [1],
        "no-self-compare": [1],
        "no-unused-expressions": [1, {"allowShortCircuit": true}],
        "no-useless-call": [1],
        "no-useless-escape": [1],
        "radix": [1],
        "yoda": [1]
    },
    "plugins": [],
    "env": {
        "es6": false,
        "node": false,
        "amd": true,
        "browser": true,
        "jquery": true
    },
    "globals": {
        "_" : false,
        "Backbone": false,
        "Marionette": false,
        "BBCodeParser": false,
        "jsyaml": false
    }
}
